<Window x:Class="KeyLogger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KeyLogger"
        mc:Ignorable="d"
        Title="KeyLogger Screen Display" Height="300" Width="400" Loaded="Window_Loaded" Deactivated="Window_Deactivated">
    <Grid Margin="0,10,0,9">
        <Rectangle x:Name="rctShift" HorizontalAlignment="Left" Height="44" Margin="10,231,0,0" Stroke="Black" VerticalAlignment="Top" Width="87" Fill="Red"/>
        <Rectangle x:Name="rctCtrl" HorizontalAlignment="Left" Height="44" Margin="107,231,0,0" Stroke="Black" VerticalAlignment="Top" Width="87" Fill="Yellow"/>
        <Rectangle x:Name="rctAlt" HorizontalAlignment="Left" Height="44" Margin="205,231,0,0" Stroke="Black" VerticalAlignment="Top" Width="87" Fill="Blue"/>
        <Rectangle x:Name="rctWindows" HorizontalAlignment="Left" Height="44" Margin="303,231,0,0" Stroke="Black" VerticalAlignment="Top" Width="87" Fill="Green"/>
        <TextBox x:Name="txtKeystroke" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="0,38,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="380" Height="176" FontFamily="Bahnschrift" FontSize="48"/>
    </Grid>
</Window>
